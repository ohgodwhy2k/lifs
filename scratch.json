{
  "id": "LiFS",
  "name": "LiFS (Live Indexed File System)",
  "extensionURL": "https://raw.githubusercontent.com/ohgodwhy2k/lifs/main/LiFS.js",
  "iconURL": "https://raw.githubusercontent.com/ohgodwhy2k/lifs/main/LiFS_Icon_Small.png",
  "featured": true,
  "description": "The next evolution of filesystems, made in the browser's persistent indexed database. Robust, concurrent-safe, and ready for production.",
  "blocks": [
    {
      "opcode": "loadLiFS",
      "blockType": "command",
      "text": "load LiFS namespace [NAME]",
      "arguments": {
        "NAME": {
          "type": "string",
          "defaultValue": "my-project-data"
        }
      }
    },
    {
      "opcode": "resetLiFS",
      "blockType": "command",
      "text": "delete all LiFS data (reset)"
    },
    {
      "text": "---"
    },
    {
      "opcode": "createFile",
      "blockType": "command",
      "text": "create/overwrite file at [PATH] with content [CONTENT]",
      "arguments": {
        "PATH": {
          "type": "string",
          "defaultValue": "/data/config.txt"
        },
        "CONTENT": {
          "type": "string",
          "defaultValue": "default content"
        }
      }
    },
    {
      "opcode": "createDirectory",
      "blockType": "command",
      "text": "create directory at [PATH]",
      "arguments": {
        "PATH": {
          "type": "string",
          "defaultValue": "/assets/images"
        }
      }
    },
    {
      "opcode": "deleteItem",
      "blockType": "command",
      "text": "delete item at [PATH]",
      "arguments": {
        "PATH": {
          "type": "string",
          "defaultValue": "/data/config.txt"
        }
      }
    },
    {
      "opcode": "renameItem",
      "blockType": "command",
      "text": "rename/move item from [OLD_PATH] to [NEW_PATH]",
      "arguments": {
        "OLD_PATH": {
          "type": "string",
          "defaultValue": "/old-file.txt"
        },
        "NEW_PATH": {
          "type": "string",
          "defaultValue": "/new-file.txt"
        }
      }
    },
    {
      "text": "---"
    },
    {
      "opcode": "readFile",
      "blockType": "reporter",
      "text": "read file [PATH]",
      "arguments": {
        "PATH": {
          "type": "string",
          "defaultValue": "/data/config.txt"
        }
      }
    },
    {
      "opcode": "listContents",
      "blockType": "reporter",
      "text": "list [TYPE] in [PATH] (JSON list)",
      "arguments": {
        "TYPE": {
          "type": "string",
          "menu": "content_type",
          "defaultValue": "all"
        },
        "PATH": {
          "type": "string",
          "defaultValue": "/"
        }
      }
    },
    {
      "opcode": "getItemProperty",
      "blockType": "reporter",
      "text": "property [PROPERTY] of item [PATH]",
      "arguments": {
        "PROPERTY": {
          "type": "string",
          "menu": "item_properties",
          "defaultValue": "size"
        },
        "PATH": {
          "type": "string",
          "defaultValue": "/data/config.txt"
        }
      }
    },
    {
      "text": "---"
    },
    {
      "opcode": "itemExists",
      "blockType": "boolean",
      "text": "item exists at [PATH]?",
      "arguments": {
        "PATH": {
          "type": "string",
          "defaultValue": "/"
        }
      }
    },
    {
      "opcode": "isDirectory",
      "blockType": "boolean",
      "text": "is [PATH] a directory?",
      "arguments": {
        "PATH": {
          "type": "string",
          "defaultValue": "/"
        }
      }
    },
    {
      "opcode": "isVFSReadyReporter",
      "blockType": "boolean",
      "text": "is LiFS ready?"
    },
    {
      "opcode": "getLiFSNamespace",
      "blockType": "reporter",
      "text": "LiFS namespace"
    },
    {
      "opcode": "getLastError",
      "blockType": "reporter",
      "text": "last LiFS error (clears after reading)"
    },
    {
      "text": "---"
    },
    {
      "opcode": "exportVFS",
      "blockType": "command",
      "text": "export LiFS to file (.lifs)"
    },
    {
      "opcode": "triggerImportVFS",
      "blockType": "command",
      "text": "import LiFS from file picker (overwrites existing)"
    }
  ],
  "menus": {
    "content_type": {
      "acceptsReporters": true,
      "items": [
        {"text": "all", "value": "all"},
        {"text": "files", "value": "files"},
        {"text": "directories", "value": "directories"}
      ]
    },
    "item_properties": {
      "acceptsReporters": true,
      "items": [
        {"text": "path", "value": "path"},
        {"text": "isDirectory", "value": "isDirectory"},
        {"text": "size", "value": "size"},
        {"text": "createdAt", "value": "createdAt"},
        {"text": "modifiedAt", "value": "modifiedAt"},
        {"text": "permissions", "value": "permissions"}
      ]
    }
  }
}
